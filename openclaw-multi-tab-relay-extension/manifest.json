{
  "manifest_version": 3,
  "name": "OpenClaw Multi-Tab Relay",
  "description": "Attach multiple tabs and relay commands to each tab via localhost websocket bridge.",
  "version": "0.1.0",
  "permissions": [
    "tabs",
    "storage",
    "scripting",
    "activeTab",
    "alarms",
    "debugger"
  ],
  "host_permissions": [
    "<all_urls>",
    "http://127.0.0.1/*",
    "http://localhost/*"
  ],
  "background": {
    "service_worker": "service_worker.js",
    "type": "module"
  },
  "action": {
    "default_title": "OpenClaw Multi-Tab Relay",
    "default_popup": "popup.html"
  }
}